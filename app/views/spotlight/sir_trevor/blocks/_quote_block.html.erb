<div class="st__content-block st__content-block--quote" style="margin-left: auto; margin-right: auto; width:60%; color:#668;">
  <div class="quote">
    <div class="quote__content" >
    	<cite style="text-align:center; font-size: 200%;"><%= sir_trevor_markdown quote_block.text%></cite>
    </div>

    <% if quote_block.cite.present? %>
      <div class="quote__cite">
        <span class="quote__cite-text" style="float:right; font-size: 125%;">&ndash; <%= quote_block.cite %></span>
      </div>
      <br />
    <% end %>
  </div>
</div>